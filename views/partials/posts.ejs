<table>
	<% for (const post of posts) { %>
	<tr>
		<td>
			<% if (post.deletable) { %>
			<form method="POST" action="posts/delete">
				<button name="id" value="<%= post.id %>">Delete</button>
			</form>
			<% } %>
		</td>
		<td>
			<%= post.createdAt %>
		</td>
		<td>
			<%= post.from %>
		</td>
		<td>
			<%= post.content %>
		</td>
	</tr>
	<% } %>
</table>

<% if (posts.cursor) { %>
<form>
	<button name="cursor" value="<%= posts.cursor %>">Next Page</button>
</form>
<% } %>
