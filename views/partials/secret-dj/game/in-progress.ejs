<hr />
<% if (dj) { %>
<h3>a playlist for <a href="/secret-dj/djs/<%= dj.recipient.id %>"><%= dj.recipient.name %></a></h3>
<h4>rules:</h4>
<ol>
	<% for (const rule of dj.rules) { %>
	<li><%=rule.text%></li>
	<% } %>
</ol>
<form class="submit-playlist-form" method="POST" action="<%= `/secret-dj/games/${season.id}/playlist` %>">
	<label for="playlist-url">playlist url</label>
	<input name="link" id="playlist-url" type="text" value="<%= dj.submissionUrl %>" />
	<button type="submit"><%=dj.submissionUrl === null ? 'submit' : 'edit'%> playlist!</button>
</form>
<% } %>
<% if (dj) { %>
<%- include('../entry-embed', { recipient: {...dj, dj: participant} }); %>
<% } %>
