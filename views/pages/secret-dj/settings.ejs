<!doctype html>
<html lang="en">
	<head>
		<%- include('../../partials/head'); %>
	</head>
	<body>
		<header>
			<%- include('../../partials/header'); %>
		</header>

		<main>
			<div>
				<h1>settings</h1>
				this is where you update your name, and that's it
			</div>

			<form name="settings-form" method="post">
				<label for="name" class="name-label">name</label>
				<input class="name-input" id="name" name="name" value="<%=name%>" required />

				<button class="settings-save">save</button>
			</form>
			<% if (message) { %>
			<%= message %>
			<% } %>
		</main>
	</body>
</html>
