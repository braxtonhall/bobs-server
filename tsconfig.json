{
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"module": "CommonJS",
		"target": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"inlineSources": true,
		"inlineSourceMap": true,
		"composite": true,
		"declaration": true,
		"declarationMap": true,
		"resolveJsonModule": true,
		"types": ["node", "jest"],
		"outDir": "dist",
		"allowJs": true,
		"noImplicitOverride": true
	},
	"ts-node": {
		"files": true,
		"preferTsExts": true
	},
	"include": ["src", "scripts", "test"],
	"exclude": ["node_modules"]
}
