{
	"name": "bobs-server",
	"version": "1.0.0",
	"main": "dist/src/index.js",
	"repository": "git@github.com:braxtonhall/bobs-server.git",
	"license": "MIT",
	"devDependencies": {
		"@types/cookie-parser": "^1.4.7",
		"@types/ejs": "^3.1.5",
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.18.0",
		"@types/jest": "^29.5.12",
		"@types/jsonwebtoken": "^9.0.6",
		"@types/luxon": "^3.4.2",
		"@types/node": "^20.10.5",
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": ">=6",
		"jest": "^29.7.0",
		"jest-date-mock": "^1.0.8",
		"lint-staged": ">=10",
		"nodemon": "^3.1.0",
		"prettier": "^3.1.1",
		"prettier-plugin-ejs": "^1.0.3",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"scripts": {
		"start": "node dist/src/index.js",
		"start:dev": "ts-node src/index.ts",
		"start:prod": "yarn run db:deploy && yarn run start",
		"watch": "nodemon",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"db:deploy": "prisma migrate deploy",
		"prepare": "husky",
		"test": "jest -i",
		"build": "tsc",
		"formatting": "prettier . --check && eslint ."
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 120,
		"plugins": [
			"prettier-plugin-ejs"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverage": true,
		"testMatch": [
			"<rootDir>/test/**/*.spec.ts"
		],
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.ts"
		],
		"setupFiles": [
			"jest-date-mock"
		],
		"coverageReporters": [
			"json-summary",
			"text"
		]
	},
	"nodemonConfig": {
		"watch": [
			"src"
		],
		"exec": "yarn start:dev",
		"ext": ".ts"
	},
	"lint-staged": {
		"*.{ts,js,md,yaml,yml,json,html,ejs,css}": "prettier --write",
		"*.prisma": "prisma format"
	},
	"dependencies": {
		"@prisma/client": "^5.7.1",
		"@sendgrid/mail": "^8.1.3",
		"body-parser": "^1.20.2",
		"cookie-parser": "^1.4.6",
		"dotenv": "^16.3.1",
		"ejs": "^3.1.10",
		"express": "^4.19.2",
		"express-session": "^1.18.0",
		"express-subdomain": "^1.0.6",
		"form-data": "^4.0.0",
		"jsonwebtoken": "^9.0.2",
		"luxon": "^3.4.4",
		"prisma": "^5.10.2",
		"ts-pattern": "^5.0.8",
		"zod": "^3.22.4"
	}
}
