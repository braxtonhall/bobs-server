{
	"name": "bobs-server",
	"version": "1.0.0",
	"main": "dist/src/index.js",
	"repository": "git@github.com:braxtonhall/bobs-server.git",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/express-session": "^1.17.10",
		"@types/jest": "^29.5.12",
		"@types/node": "^20.10.5",
		"@types/node-fetch": "^2.6.10",
		"@types/passport": "^1.0.16",
		"@types/passport-local": "^1.0.38",
		"@typescript-eslint/eslint-plugin": "^7.3.1",
		"@typescript-eslint/parser": "^7.3.1",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"husky": ">=6",
		"jest": "^29.7.0",
		"jest-date-mock": "^1.0.8",
		"lint-staged": ">=10",
		"prettier": "^3.1.1",
		"ts-jest": "^29.1.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.3.3"
	},
	"scripts": {
		"start": "node dist/src/server.js",
		"db:generate": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"prepare": "husky",
		"test": "jest",
		"build": "tsc",
		"formatting": "prettier . --check && eslint ."
	},
	"prettier": {
		"useTabs": true,
		"printWidth": 120
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"collectCoverage": true,
		"testMatch": [
			"<rootDir>/test/**/*.spec.ts"
		],
		"collectCoverageFrom": [
			"<rootDir>/src/**/*.ts"
		],
		"setupFiles": [
			"jest-date-mock"
		],
		"coverageReporters": [
			"json-summary",
			"text"
		]
	},
	"lint-staged": {
		"*.{ts,js,md,yaml,yml,json,html}": "prettier --write"
	},
	"dependencies": {
		"@prisma/client": "^5.7.1",
		"body-parser": "^1.20.2",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"express-session": "^1.17.3",
		"express-subdomain": "^1.0.6",
		"passport": "^0.7.0",
		"passport-local": "^1.0.0",
		"prisma": "^5.10.2",
		"ts-pattern": "^5.0.8",
		"zod": "^3.22.4"
	}
}
